<h1>Statistiques</h1>
<h2>Compteurs journaliers</h2>

<div class="#chart-wrapper">
    <canvas id="power-chart" style="height:60vh; width:90vw"></canvas>
</div>


<script>
    let context = document.getElementById("power-chart").getContext('2d')
    console.log("stats",<%- JSON.stringify(dataDay) %>, <%- JSON.stringify(dataPowerDay) %>);

    new Chart(context, {
        type: 'bar',
        data: {
            labels: <%- JSON.stringify(dataDay) %>,
            datasets: [{ 
                data: <%- JSON.stringify(dataPowerDay) %>,
                label: "Conso Journali√®re",
                backgroundColor: "#3e95cd",
                stack: "stack0"
            }]
        },
        option: {
            scales: {
                x: {
                    stacked: true,
                },
                y: {
                    stacked: true
                }
            },
            responsive: true,
            maintainAspectRatio: false
        }
    })
</script>


